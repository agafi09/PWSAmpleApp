<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="?android:attr/colorBackground"
    android:id="@+id/venue_detail_fragment">
<ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="?android:attr/colorBackground">

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:background="?android:attr/colorBackground">
            
        <ImageView
        android:id="@+id/venue_detail_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/dummyimage" />

	    <TextView android:id="@+id/venue_detail_title_text"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/venue_view_padding"
	    android:textSize="@dimen/venue_view_title_size"/>
	    
	    <TextView android:id="@+id/venue_detail_address_text"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="@dimen/venue_view_padding"
	    android:textSize="@dimen/venue_view_text_size"/>
	    
	    <TextView android:id="@+id/venue_detail_schedule_text"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="@dimen/venue_view_padding"
	    android:textSize="@dimen/venue_view_text_size"/>
    
        </LinearLayout>
    </ScrollView>

</LinearLayout>
